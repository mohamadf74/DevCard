@model IEnumerable<DevCard_Project.Models.ProjectModel>

<section class="featured-section p-3 p-lg-5">
    <div class="container">
        <h2 class="section-title font-weight-bold mb-5">خاص ترین پروژه ها</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-5">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="assets/images/project/@item.Image" class="card-img" alt="@item.Name" title="@item.Description">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a asp-controller="Home" asp-action="ProjectDetails" asp-route-id="@item.Id" class="theme-link">
                                            @item.Id @item.Name
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                      @item.Description
                                    </p>
                                    <p class="card-text"><small class="text-muted">مشتری: @item.Client</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
           
        </div>
    </div>
</section>